{% extends "admin/base.html.twig" %}
{% block name %}
	<h1 class="mt-4">Dashboard</h1>
{% endblock %}
{% block main %}
	<canvas id="myChart" width="400" height="200"></canvas>
{% endblock %}

{% block javascript %}
	<script>
		var ctx = document.getElementById('myChart');
var myChart = new Chart(ctx, {
type: 'bar',
data: {
labels: [
'category', 'user', 'video', 'comment'
],
datasets: [
{
label: '# of Votes',
data: [
{{ catCount|raw }}, {{ userCount|raw }}, {{ videoCount|raw }}, {{ commentCount|raw }}
],
backgroundColor: [
'rgba(255, 99, 132, 0.2)',
'rgba(54, 162, 235, 0.2)',
'rgba(75, 192, 192, 0.2)',
'rgba(153, 102, 255, 0.2)',
'rgba(255, 159, 64, 0.2)'
],
borderColor: [
'rgba(255, 99, 132, 1)',
'rgba(54, 162, 235, 1)',
'rgba(255, 206, 86, 1)',
'rgba(75, 192, 192, 1)',
'rgba(153, 102, 255, 1)',
'rgba(255, 159, 64, 1)'
],
borderWidth: 1
}
]
}
});
	</script>
{% endblock %}
